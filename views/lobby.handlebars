<body>
  <!--Navigation-->

  <nav class='navbar navbar-light navbar-expand-md'>
    <div class='container-fluid'>
      <div class='ms-1 d-flex flex-row align-items-center'>
        <img class='logo' src='/images/favicon.svg' alt='logo' />
        <div>
          <h1 class='display-4 font-weight-bold leFont ms-2'>

            TaleSpinner</h1>

        </div>
      </div>

      <button
        class='navbar-toggler bg-light'
        type='button'
        data-bs-toggle='collapse'
        data-bs-target='#navbarNav'
        aria-controls='navbarNav'
        aria-expanded='false'
        aria-label='Toggle navigation'
      >
        <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbarNav'>
        <ul class='navbar-nav ms-auto'>
          {{#if logged_in}}

            <li class='nav-item mb-1 mx-1 ms-auto'>
              <a
                href='/profile'
                type='button'
                class='btn-lg btn-dark text-decoration-none text-center w-100'
              >Profile</a></li>

            <li class='nav-item mb-1 mx-1 ms-auto'>
              <a
                type='button'
                class='btn-lg btn-dark text-decoration-none text-center w-100'
                id='logout'
              >Logout</a></li>
          {{else}}
            <li class='nav-item mb-1'>
              <a
                type='button'
                class='btn-lg btn-dark text-light text-decoration-none'
                href='/login'
              >Log In</a></li>
          {{/if}}</ul></div>
    </div>
  </nav>

  <div class='jumbotron jumbotron-fluid' id='jumbo-lobby'>
    <main
      class='container-fluid d-flex justify-content-center align-items-center w-100 h-50 flex-column'
    >
      <h2 class='leFont text-light text-center mb-3'>We are, as a species,
        addicted to story - Jonathan Gotschall</h2>
      <div class='d-flex flex-row flex-wrap justify-content-center'>
        <button
          type='button'
          class='btn modal-button mx-2 text-light border border-secondary my-2'
          data-bs-toggle='modal'
          data-bs-target='#createLibraryModal'
        >
          Create a Library
        </button>
        <button
          type='button'
          class='btn modal-button mx-2 text-light border border-secondary my-2'
          data-bs-toggle='modal'
          data-bs-target='#joinLibraryModal'
        >
          Join a Library
        </button>
        <button
          type='button'
          class='btn modal-button mx-2 text-light border border-secondary my-2'
          data-bs-toggle='modal'
          data-bs-target='#aboutTaleSpinnerModal'
        >
          About TaleSpinner
        </button>
      </div>
      {{! Create Library Modal }}
      <div
        class='modal fade'
        id='createLibraryModal'
        tabindex='-1'
        aria-labelledby='createLibraryModalLabel'
        aria-hidden='true'
      >
        <div class='modal-dialog'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5
                class='modal-title text-dark'
                id='createLibraryModalLabel'
              >Create a Library</h5>
              <button
                type='button'
                class='btn-close'
                data-bs-dismiss='modal'
                aria-label='Close'
              ></button>
            </div>
            <div class='modal-body'>
              <form
                class='form-inline d-flex flex-column align-items-center mb-0'
                id='createLibraryForm'
              >
                <div class='d-flex flex-row align-items-center'>
                  <input
                    id='createLibraryInput'
                    class='form-control border border-dark me-1'
                    type='text'
                    placeholder="Type a Library's Name..."
                    aria-label='Create Library'
                  />
                  <div class='d-flex flex-row align-items-center'>
                    <button
                      class='btn btn-outline-dark btn-light w-100 mx-1'
                      id='createLibraryBtn'
                      type='button'
                    >Create</button></div></div></form>
            </div>
            <div class='modal-footer'>
              <button
                type='button'
                class='btn btn-secondary'
                data-bs-dismiss='modal'
              >Close</button>

            </div>
          </div>
        </div>
      </div>
      {{! Join Library Modal }}
      <div
        class='modal fade'
        id='joinLibraryModal'
        tabindex='-1'
        aria-labelledby='joinLibraryModalLabel'
        aria-hidden='true'
      >
        <div class='modal-dialog'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5 class='modal-title text-dark' id='joinLibraryModalLabel'>Join
                a Library</h5>
              <button
                type='button'
                class='btn-close'
                data-bs-dismiss='modal'
                aria-label='Close'
              ></button>
            </div>
            <div class='modal-body'>
              <form
                class='form-inline d-flex flex-column align-items-center mb-0'
                id='joinLibraryForm'
              >
                <div class='d-flex flex-row align-items-center'>
                  <input
                    id='joinLibraryInput'
                    class='form-control border border-dark me-1'
                    type='text'
                    placeholder="Type a Library's Name..."
                    aria-label='Join Library'
                  />
                  <div class='d-flex flex-row align-items-center'>
                    <button
                      class='btn btn-outline-dark btn-light w-100'
                      id='joinLibraryBtn'
                      type='submit'
                    >Join</button></div></div></form></div>
            <div class='modal-footer'>
              <button
                type='button'
                class='btn btn-secondary'
                data-bs-dismiss='modal'
              >Close</button>

            </div>
          </div>
        </div>
      </div>
      {{! About Talespinner Modal }}
      <div
        class='modal fade'
        id='aboutTaleSpinnerModal'
        tabindex='-1'
        aria-labelledby='aboutTaleSpinnerModalLabel'
        aria-hidden='true'
      >
        <div class='modal-dialog'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5
                class='modal-title text-dark'
                id='aboutTaleSpinnerModalLabel'
              >New to TaleSpinner?</h5>
              <button
                type='button'
                class='btn-close'
                data-bs-dismiss='modal'
                aria-label='Close'
              ></button>
            </div>
            <div class='modal-body text-dark'>
              Placeholder Text!
            </div>
            <div class='modal-footer'>
              <button
                type='button'
                class='btn btn-secondary'
                data-bs-dismiss='modal'
              >Close</button>

            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!--Local Script and Boostrap Script-->
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
    crossorigin='anonymous'
  ></script>
  <script src='/socket.io/socket.io.js'></script>
  <script src='js/lobby.js'></script>

  {{#if logged_in}}
    <script src='/js/logout.js'></script>
  {{/if}}
</body>