<body>
  <!--Background-->
  <div class='jumbotron jumbotron-fluid leFont' id='jumbo-lobby'>
    <!--Title-->
    <div class='container'>
      <div class='title-holder lobby-title'>
        {{#if logged_in}}
          <div class='position-absolute'>
            <a
              href='/profile'
              type='button'
              class='btn btn-dark text-light'
            >Profile</a>
            |
            <button class='btn btn-dark text-light' id='logout'>Logout</button>
          </div>
        {{else}}
          <div class='position-absolute'>
            <a type='button' class='btn btn-dark text-light' href='/login'>Log
              In</a></div>
        {{/if}}
        <h1
          class='display-4 text-center font-weight-bold mx-auto'
        >TaleSpinner</h1>
        <h2>Please create a new library or enter an existing one</h2>
      </div>
      <!--Navigation-->
      <nav class='navbar navbar-light bg-light lobby-title'>
        <a class='navbar-brand'><button
            class='btn btn-outline-secondary'
            id='createLibrary'
            type='button'
          >Create a Library</button></a>
        <form class='form-inline' id='joinRoomForm'>
          <input
            id='joinRoomInput'
            class='form-control mr-sm-2'
            type='search'
            placeholder='Search for a Library'
            aria-label='Search'
          />
          <button
            class='btn btn-outline-secondary my-2 my-sm-0'
            id='searchBtn'
            type='submit'
          >Search</button>
        </form>
      </nav>
    </div>

    <!--Create a Library-->
    <div class='row topMargin'>
      <div
        class='card col-md-1 offset-md-1'
        id='create'
        style='width: 18rem; visibility: hidden'
      >
        <div class='card-body'>
          <h5 class='card-title text-dark'>Create a library</h5>
          <br />
          <form id='createLobbyForm' action='/room' method='POST'>
            <input
              class='form-control mr-sm-2'
              type='text'
              id='room'
              name='room'
              placeholder='Name Your New Library'
              aria-label='Name your Library'
              required
            />
            <br />
            <button
              class='btn btn-outline-secondary my-2 my-sm-0'
              id='searchBtn'
              type='submit'
            >Submit</button></form>
        </div>
      </div>

      <div
        class='card col-lg-1 offset-md-1'
        id='results'
        style='width: 24rem;  visibility: hidden'
      >
        <div class='card-body'>
          <h5 class='card-title text-dark'>Search Results</h5>
          <br />

        </div>
      </div>
    </div>
  </div>
  <!--Local Script and Boostrap Script-->
  <script
    src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'
    integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p'
    crossorigin='anonymous'
  ></script>
  <script src='/socket.io/socket.io.js'></script>
  <script src='js/lobby.js'></script>
  <script src='js/style.js'></script>
  {{#if logged_in}}
    <script src='/js/logout.js'></script>
  {{/if}}
</body>